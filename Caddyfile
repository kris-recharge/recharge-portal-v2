dashboard.rechargealaska.net {

  encode gzip

  # --- Next.js (UI + auth + api) ---
  handle /login* {
    reverse_proxy web:3000
  }

  handle /api/* {
    reverse_proxy web:3000
  }

  # Protect /app via Next.js auth verify endpoint
  handle /app* {
    forward_auth web:3000 {
      uri /api/auth/verify
      copy_headers Cookie
    }
    reverse_proxy web:3000
  }

  # --- Streamlit behind auth, mounted at /st ---
  handle /st* {
    forward_auth web:3000 {
      uri /api/auth/verify
      copy_headers Cookie
    }
    reverse_proxy app:8501
  }

  handle /_stcore/* {
    forward_auth web:3000 {
      uri /api/auth/verify
      copy_headers Cookie
    }
    reverse_proxy app:8501
  }

  # Root redirect to /login
  handle = / {
    redir /login 302
  }

  # Everything else -> Next
  handle {
    reverse_proxy web:3000
  }
}
